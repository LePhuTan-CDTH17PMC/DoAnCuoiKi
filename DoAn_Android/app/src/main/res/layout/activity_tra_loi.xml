<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".Tra_loi">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/call"
                        android:onClick="GoiDien"
                        android:id="@+id/imgGoiDien"/>
                    <ImageView
                        android:onClick="trogiup5050"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/icon_50_50"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/imageView5050"/>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/khan_gia"
                        android:layout_marginLeft="20dp"
                        android:onClick="TrogiupKhangia"
                        android:id="@+id/imageViewKhanGia"/>
                    <ImageView
                        android:id="@+id/imageViewDoiCauhoi"
                        android:onClick="DoiCauHoi"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/reload"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="322dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="389dp"
                        android:layout_height="257dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_btn"
                        android:gravity="center"
                        android:text="Câu hỏi"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:id="@+id/txtCauHoi"></TextView>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#FFAD00"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/textviewDA1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="abc"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#FFF"
                        android:background="@drawable/bg_btn"
                        android:textStyle="bold"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#FFAD00"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/textviewDA2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="abc"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#FFF"
                        android:background="@drawable/bg_btn"
                        android:textStyle="bold"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#FFAD00"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/textviewDA3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="abc"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#FFF"
                        android:background="@drawable/bg_btn"
                        android:textStyle="bold"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#FFAD00"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/textviewDA4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="abc"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#FFF"
                        android:background="@drawable/bg_btn"
                        android:textStyle="bold"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"></TextView>
                </RelativeLayout>




            </LinearLayout>
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/txtKetthuc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="ra về"
            android:background="#03A9F9"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center"
        android:background="#03A9F9"
        android:padding="10dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lsvTienThuong"></ListView>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
